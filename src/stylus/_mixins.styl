vuse-themebuilder(background, color)
  background: background
  background-color: background !important
  color: color !important

vuse-tb-listgroup(background, color)
  // background: darken(background, 25%)
  // background-color: darken(background, 25%)
  background: rgba(0,0,0,0.12)
  background-color: rgba(0,0,0,0.12)
  color: color

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

// gmd: Google Material Design
// Ref: https://material.io/design/components/navigation-drawer.html#bottom-drawer
vuse-gmd-themebuilder(background, color)
  background: rgba(lighten(background, 90%), 0.8)
  background-color: rgba(lighten(background, 90%), 0.8) !important
  color: darken(background, 3%) !important
  @extend .elevation-2
